<!-- Landing page premium para exibir produtos com Tailwind -->
<div class="container mx-auto px-4 py-12">
  <h1 class="text-4xl font-bold text-center text-blue-700 mb-10">Bem-vindo à Ótica Store</h1>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <% @products.each do |product| %>
      <div class="bg-white rounded-lg shadow-lg p-6 flex flex-col items-center">
        <h2 class="text-xl font-semibold mb-2"><%= product.name %></h2>
        <p class="text-gray-600 mb-4"><%= product.description %></p>
        <span class="text-lg font-bold text-green-600 mb-2">R$ <%= number_to_currency(product.price, unit: "", separator: ",", delimiter: ".") %></span>
        <%= link_to "Ver detalhes", product_path(product), class: "mt-auto inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
      </div>
    <% end %>
  </div>vej
</div>
