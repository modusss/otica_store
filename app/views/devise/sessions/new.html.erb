<!-- Minimal, premium login form with Tailwind CSS -->
<div class="flex flex-col items-center justify-center min-h-[60vh]">
  <div class="w-full max-w-md bg-white rounded-lg shadow p-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Entrar na sua conta</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-200" %>
      </div>
      <div class="mb-6">
        <%= f.label :password, class: "block text-gray-700 mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-200" %>
      </div>
      <div class="flex items-center justify-between">
        <%= f.submit "Entrar", class: "bg-blue-700 text-white px-6 py-2 rounded font-semibold hover:bg-blue-800 transition" %>
        <%= link_to "Esqueceu a senha?", new_password_path(resource_name), class: "text-sm text-blue-700 hover:underline" %>
      </div>
    <% end %>
    <!-- Adiciona um link para registro caso o usuário não tenha conta -->
    <div class="mt-8 text-center">
      <span class="text-gray-500 text-sm">Não tem uma conta?</span>
      <%= link_to "Criar conta", new_registration_path(resource_name), class: "ml-2 text-blue-700 font-semibold hover:underline" %>
    </div>
  </div>
</div>