<!-- Premium, minimal registration form with Tailwind CSS -->
<div class="flex flex-col items-center justify-center min-h-[60vh]">
  <div class="w-full max-w-md bg-white rounded-lg shadow p-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Criar nova conta</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-200" %>
      </div>
      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 mb-2" %>
        <% if @minimum_password_length %>
          <em class="text-xs text-gray-400">(<%= @minimum_password_length %> caracteres mínimo)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-200 mt-1" %>
      </div>
      <div class="mb-6">
        <%= f.label :password_confirmation, class: "block text-gray-700 mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-200" %>
      </div>
      <div class="flex items-center justify-between">
        <%= f.submit "Criar conta", class: "bg-blue-700 text-white px-6 py-2 rounded font-semibold hover:bg-blue-800 transition" %>
        <%= link_to "Já tem conta?", new_session_path(resource_name), class: "text-sm text-blue-700 hover:underline" %>
      </div>
    <% end %>
  </div>
</div>