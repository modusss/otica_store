<h1 class="text-2xl font-bold"><%= @product.name %></h1>
<p class="text-gray-600 mb-4"><%= @product.description %></p>

<%= form_with model: @line_item, url: line_items_path, data: { turbo_stream: true } do |f| %>
  <div class="space-y-2">
    <%= f.collection_select :product_variant_id,
          @variants,
          :id,
          :sku,
          prompt: "Escolha o grau",
          class: "border rounded w-full" %>

    <%= f.number_field :quantity,
          value: 1,
          min: 1,
          class: "border rounded w-20" %>
  </div>

  <%= f.submit "Adicionar ao carrinho",
        class: "mt-4 bg-primary text-white px-4 py-2 rounded" %>
<% end %>